{#
| Variable                        | Type     | Description                                                                  |
|---------------------------------|----------|------------------------------------------------------------------------------|
| component                       | object   | Contains merchant settings for fields from twilight.json `component` section |
| component.main_title            | object[] | Main title collection                                                        |
| component.product_collection_select | object[] | Product collection items                                                    |
| component.product_collection_select[].product_title | string | Product title                                                           |
| component.product_collection_select[].description | string | Product description                                                    |
| component.product_collection_select[].url | string | Product URL                                                           |
| component.product_collection_select[].image | string | Product image URL                                                      |
| position                        | int      | Sorting number start from zero                                               |
#}

<section class="bg-white" style="padding-top: 60px;">
  <div class="max-w-[1200px] mx-auto px-4 md:px-[200px] lg:px-[400px]">
    <!-- Main Heading -->
    <h2 class="text-center mb-8 md:mb-12">
      <div class="text-center">
        <span 
          class="font-bold arabic-gradient-text"
          style="
            font-family: 'DIN Next LT W23', Arial, sans-serif;
            font-weight: 700;
            font-style: normal;
            letter-spacing: 0px;
            text-align: center;
            background: linear-gradient(75deg, #161616 35.9%, #565050 70.56%);
            background-clip: text;
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
          "
        >
          اختار الجوال اللي<br />تستخدمه
        </span>
      </div>
    </h2>

    <!-- Product Picker Grid -->
    <div class="grid grid-cols-2 gap-6 justify-items-center md:flex md:flex-row md:gap-4 md:justify-center">
      {% if component['product-collection-select'] is defined %}
        {% for item in component['product-collection-select'] %}
          <div class="text-center w-full">
            <div class="mb-2">
              <span 
                class="text-center font-din-bold text-[16px] leading-[20px] md:text-[20px] md:leading-[24px]"
                style="
                  color: #3C3C3C;
                  display: inline-block;
                "
              >
                {% if item['product-title'] is defined %}
                  {{ item['product-title']|raw }}
                {% else %}
                  Product Title Missing
                {% endif %}
              </span>
            </div>
            <div class="mb-1 md:mb-2">
              <span 
                class="text-[10px] md:text-[12px] font-normal leading-[12px] md:leading-[14px] text-[rgba(45,73,158,0.61)]"
                style="font-family: 'DIN Next LT W23', Arial, sans-serif;"
              >
                {% if item['description'] is defined %}
                  {{ item['description']|raw }}
                {% else %}
                  Description Missing
                {% endif %}
              </span>
            </div>
            <div class="mb-3 md:mb-4 flex justify-center">
              <button 
                class="collection-btn text-black text-[12px] md:text-[14px] font-normal leading-[15.628px] hover:underline cursor-pointer"
                data-url="{{ item['url']|default('') }}"
                data-type="{{ item['product-type']|default('iphone') }}"
                style="
                  font-family: 'DIN Next LT W23', Arial, sans-serif;
                  font-size: 14px;
                  line-height: 130%;
                  vertical-align: bottom;
                  display: flex;
                  align-items: center;
                  gap: 8px;
                "
                type="button"
              >
                عرض المجموعة
                <img 
                  src="{{ 'images/icons/mynaui_arrow-up.png'|asset }}" 
                  alt="Arrow" 
                  style="
                    width: 16px;
                    height: 16px;
                    object-fit: contain;
                    transform: rotate(180deg);
                  "
                />
              </button>
            </div>
            {% if item['image'] is defined and item['image'] %}
              <img 
                src="{{ item['image'] }}" 
                alt="{{ item['product-title']|default('Product') }}" 
                class="w-32 sm:w-36 md:w-64 lg:w-80 h-auto object-contain mx-auto"
              />
            {% else %}
              <div class="product-image mx-auto" style="background: #f0f0f0; display: flex; align-items: center; justify-content: center; color: #666;">
                Image Missing
              </div>
            {% endif %}
          </div>
        {% endfor %}
      {% else %}
        <div class="text-center">
          <p>No product collection data found</p>
        </div>
      {% endif %}
    </div>
  </div>
</section>

<script>
// Function to navigate to product page using dynamic URL
function navigateToProductPage(customUrl, productType) {
  // Check if custom URL is provided and not empty
  if (customUrl && customUrl.trim() !== '') {
    // Use the custom URL configured in the component
    window.location.href = customUrl;
  } else {
    // Fallback to default behavior if no custom URL is set
    if (productType === 'iphone') {
      // Navigate to iPhone case page
      window.location.href = '{{ store.url }}/product/iphone-case';
    } else if (productType === 'samsung') {
      // Navigate to Samsung case page
      window.location.href = '{{ store.url }}/product/samsung-case';
    } else {
      // Fallback to general products page
      window.location.href = '{{ store.url }}/products?type=' + productType;
    }
  }
}
</script>
<script>
// Delegate clicks from product collection buttons to avoid inline JS
document.addEventListener('click', function(ev) {
  const btn = ev.target.closest('.collection-btn');
  if (!btn) return;
  ev.preventDefault();
  const url = btn.getAttribute('data-url') || '';
  const type = btn.getAttribute('data-type') || 'iphone';
  navigateToProductPage(url, type);
});
</script>

