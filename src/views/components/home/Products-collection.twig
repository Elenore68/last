{#
| Variable                        | Type     | Description                                                                  |
|---------------------------------|----------|------------------------------------------------------------------------------|
| component                       | object   | Contains merchant settings for fields from twilight.json `component` section |
| component.main_title            | object[] | Main title collection                                                        |
| component.product_collection_select | object[] | Product collection items                                                    |
| component.product_collection_select[].product_title | string | Product title                                                           |
| component.product_collection_select[].description | string | Product description                                                    |
| component.product_collection_select[].url | string | Product URL                                                           |
| component.product_collection_select[].image | string | Product image URL                                                      |
| position                        | int      | Sorting number start from zero                                               |
#}

<section class="alcantara-picker-section py-16 bg-white">
  <div class="max-w-[1200px] mx-auto px-4 md:px-[200px] lg:px-[400px]">
    <!-- Main Heading -->
    <h2 class="text-center mb-12">
      <div class="text-center">
        <span class="arabic-heading">
          اختار الجوال اللي<br />تستخدمه
        </span>
      </div>
    </h2>

    <!-- Product Picker Grid -->
    <div class="flex flex-row gap-4 justify-center">
      {% if component['product-collection-select'] is defined %}
        {% for item in component['product-collection-select'] %}
          <div class="text-center">
            <div class="mb-2">
              <span class="product-name">
                {% if item['product-title'] is defined %}
                  {{ item['product-title']|raw }}
                {% else %}
                  Product Title Missing
                {% endif %}
              </span>
            </div>
            <div class="mb-2">
              <span class="compatibility-text">
                {% if item['description'] is defined %}
                  {{ item['description']|raw }}
                {% else %}
                  Description Missing
                {% endif %}
              </span>
            </div>
            <div class="mb-4 flex justify-center">
              <button 
                onclick="event.preventDefault(); showProductModal('{{ item['product-type']|default('iphone') }}'); return false;"
                class="view-collection-btn"
                style="text-decoration: none; border: none; background: none; cursor: pointer;"
                type="button"
              >
                <span class="arrow-icon"></span>
                عرض المجموعة
              </button>
            </div>
            {% if item['image'] is defined and item['image'] %}
              <img 
                src="{{ item['image'] }}" 
                alt="{{ item['product-title']|default('Product') }}" 
                class="product-image"
              />
            {% else %}
              <div class="product-image" style="background: #f0f0f0; display: flex; align-items: center; justify-content: center; color: #666;">
                Image Missing
              </div>
            {% endif %}
          </div>
        {% endfor %}
      {% else %}
        <div class="text-center">
          <p>No product collection data found</p>
        </div>
      {% endif %}
    </div>
  </div>
</section>

<script>
// Global variables
let currentProductType = 'iphone';
let selectedModalColor = 'black';

// Function to show product modal
function showProductModal(productType) {
  currentProductType = productType;
  const modal = document.getElementById('product-modal');
  const title = document.getElementById('modal-title');
  const mainImage = document.getElementById('modal-main-image');
  const modelSelector = document.getElementById('modal-model-selector');
  
  if (!modal) {
    return;
  }
  
  if (productType === 'iphone') {
    title.textContent = 'غطاء ايفون 16 برو - اسود';
    mainImage.src = '{{ 'images/product/iphone2.png'|asset }}';
    modelSelector.innerHTML = `
      <option value="iPhone 16 Pro">ايفون 16 برو</option>
      <option value="iPhone 16 Pro Max">ايفون 16 برو ماكس</option>
      <option value="iPhone 16">ايفون 16</option>
    `;
  } else {
    title.textContent = 'غطاء سامسونج S24 - اسود';
    mainImage.src = '{{ 'images/product/image 27.png'|asset }}';
    modelSelector.innerHTML = `
      <option value="Samsung S24">سامسونج S24</option>
      <option value="Samsung S24 Ultra">سامسونج S24 الترا</option>
      <option value="Samsung S24 Plus">سامسونج S24 بلس</option>
    `;
  }
  
  modal.classList.remove('hidden');
  modal.style.display = 'block';
  modal.style.visibility = 'visible';
  modal.style.opacity = '1';
  document.body.style.overflow = 'hidden';
  
  // Initialize mobile slider
  initMobileSlider();
}

// Function to close product modal
function closeProductModal() {
  const modal = document.getElementById('product-modal');
  
  if (!modal) {
    return;
  }
  
  modal.classList.add('hidden');
  modal.style.display = 'none';
  modal.style.visibility = 'hidden';
  modal.style.opacity = '0';
  document.body.style.overflow = 'auto';
}

// Function to change modal image
function changeModalImage(src) {
  document.getElementById('modal-main-image').src = src;
  
  // Update active thumbnail state
  const allThumbnails = document.querySelectorAll('[onclick*="changeModalImage"]');
  allThumbnails.forEach(thumb => {
    if (thumb.onclick.toString().includes(src)) {
      thumb.classList.add('border-gray-900', 'ring-2', 'ring-gray-200');
      thumb.classList.remove('border-gray-300');
    } else {
      thumb.classList.remove('border-gray-900', 'ring-2', 'ring-gray-200');
      thumb.classList.add('border-gray-300');
    }
  });
}

// Function to initialize mobile slider
function initMobileSlider() {
  const slider = document.getElementById('mobile-slider');
  if (slider) {
    // Add touch/swipe functionality for mobile
    let isDown = false;
    let startX;
    let scrollLeft;

    slider.addEventListener('mousedown', (e) => {
      isDown = true;
      slider.classList.add('active');
      startX = e.pageX - slider.offsetLeft;
      scrollLeft = slider.scrollLeft;
    });

    slider.addEventListener('mouseleave', () => {
      isDown = false;
      slider.classList.remove('active');
    });

    slider.addEventListener('mouseup', () => {
      isDown = false;
      slider.classList.remove('active');
    });

    slider.addEventListener('mousemove', (e) => {
      if (!isDown) return;
      e.preventDefault();
      const x = e.pageX - slider.offsetLeft;
      const walk = (x - startX) * 2;
      slider.scrollLeft = scrollLeft - walk;
    });
  }
}

// Function to select modal color
function selectModalColor(color) {
  selectedModalColor = color;
  
  document.getElementById('modal-color-black').className = 
    color === 'black' ? 'w-10 h-10 rounded-full border-2 border-gray-900 ring-2 ring-gray-200' : 'w-10 h-10 rounded-full border-2 border-gray-300';
  document.getElementById('modal-color-gray').className = 
    color === 'gray' ? 'w-10 h-10 rounded-full border-2 border-gray-900 ring-2 ring-gray-200' : 'w-10 h-10 rounded-full border-2 border-gray-300';
}

// Function to add to cart
function addToCart() {
  const lockIcon = document.getElementById('modal-lock-icon');
  const model = document.getElementById('modal-model-selector').value;
  
  // Add animation effect
  lockIcon.style.transition = 'all 0.3s ease';
  lockIcon.style.transform = 'scale(1.1) rotate(5deg)';
  
  setTimeout(() => {
    lockIcon.style.transform = 'scale(1) rotate(0deg)';
  }, 300);
  

  
  // Here you would typically call Salla's add to cart function
  // salla.cart.addItem(productId, quantity, options);
}



// Initialize modal event listeners when DOM is loaded
document.addEventListener('DOMContentLoaded', function() {
  // Close modal when clicking outside
  const modal = document.getElementById('product-modal');
  if (modal) {
    modal.addEventListener('click', function(e) {
      if (e.target === this) {
        closeProductModal();
      }
    });
  }
  
  // Close modal on escape key
  document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape') {
      closeProductModal();
    }
  });
});
</script>

