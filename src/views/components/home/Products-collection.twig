{#
| Variable                        | Type     | Description                                                                  |
|---------------------------------|----------|------------------------------------------------------------------------------|
| component                       | object   | Contains merchant settings for fields from twilight.json `component` section |
| component.main_title            | object[] | Main title collection                                                        |
| component.product_collection_select | object[] | Product collection items                                                    |
| component.product_collection_select[].product_title | string | Product title                                                           |
| component.product_collection_select[].description | string | Product description                                                    |
| component.product_collection_select[].url | string | Product URL                                                           |
| component.product_collection_select[].image | string | Product image URL                                                      |
| position                        | int      | Sorting number start from zero                                               |
#}

<section class="alcantara-picker-section py-16 bg-white">
  <div class="max-w-[1200px] mx-auto px-4 md:px-[200px] lg:px-[400px]">
    <!-- Main Heading -->
    <h2 class="text-center mb-12">
      <div class="text-center">
        <span class="arabic-heading">
          {% if component['Products-collection.main-title']|length > 0 %}
            {{ component['Products-collection.main-title'][0]['Products-collection.main-title.Products-collection.main-title.Products-collection.main-title.main-title']|raw }}
          {% else %}
            اختار الجوال اللي<br />تستخدمه
          {% endif %}
        </span>
      </div>
    </h2>

    <!-- Product Picker Grid -->
    <div class="flex flex-row gap-4 justify-center">
      {% for item in component['product-collection-select'] %}
        <div class="text-center">
          <div class="mb-2">
            <span class="product-name">
              {{ item['product-collection-select.product-title']|raw }}
            </span>
          </div>
          <div class="mb-2">
            <span class="compatibility-text">
              {{ item['product-collection-select.description']|raw }}
            </span>
          </div>
          <div class="mb-4 flex justify-center">
            <button 
              onclick="handleViewCollection('{{ item['product-collection-select.url'] }}')"
              class="view-collection-btn"
            >
              <span class="arrow-icon"></span>
              عرض المجموعة
            </button>
          </div>
          <img 
            src="{{ item['product-collection-select.image'] }}" 
            alt="{{ item['product-collection-select.product-title']|raw }}" 
            class="product-image"
          />
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<script>
function handleViewCollection(url) {
  // Navigate to the provided URL
  if (url && url !== '#') {
    window.location.href = url;
  }
}
</script>

<style>
