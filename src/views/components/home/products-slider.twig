             <span style="font-family: 'DINNextLTArabic', Arial, sans-serif !important;">عرض المجموعة</span>
           </button>
         </div>
        <img 
          src="{{ 'images/samsung-case.png.png'|asset }}" 
          alt="Samsung Case" 
          class="product-image"
        />
      </div>
    </div>
  </div>
</section>

<script>
function handleViewCollection(productType) {
  // Navigate to the appropriate product collection
  if (productType === 'iphone') {
    // Navigate to iPhone collection
    window.location.href = '/products?brand=iphone';
  } else if (productType === 'samsung') {
    // Navigate to Samsung collection
    window.location.href = '/products?brand=samsung';
  }
}
</script>

