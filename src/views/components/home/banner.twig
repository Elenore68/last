<section class="s-block s-block--full-bg" style="background-color: #3c3c3c;">
    {% for banner in component.banner_last %}
        <div class="relative">
            <img src="{{ banner.image }}" alt="{{ banner.title }}" class="w-full h-auto object-cover">
            <div class="absolute inset-0 flex items-center justify-center">
                <div class="container text-center text-white">
                    <div class="w-full py-20">
                        <h3 class="text-4xl font-bold mb-4">{{ banner.title }}</h3>
                        <p class="text-lg">{{ banner.subtitle }}</p>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
</section>
